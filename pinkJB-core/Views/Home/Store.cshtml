

@model IEnumerable<Product>
@{
    ViewData["Title"] = "List of products";
}

<div class="text-center">
    <br /><br /><br />
    <h1 class="customFont" style="font-size: 65px;">Pink <b><i>JB</i></b></h1>

</div>
<div class="row">
 @foreach (var item in Model)
    {

        
        <div class="col-md-4 col-xs-6 border-primary mb-3">
                    <span class="border-primary">

            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-pinkJB text-center" style="background-color: deeppink">
                            <p class="card-text text-white">
                                <h2 class="card-title customFont text-white" style="color: white">
                                    @item.ProductName
                                    <br>
                                   
                                </h2>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ProductImage" width="100%" alt="@item.ProductName">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text customFont">@item.ProductDescription</p>
                            <p class="card-text customFont" >
                                <b>Status: </b>
                                @if (@item.amountLeft >= 1)
                                {
                                    <span class="badge bg-pinkJB  text-white" style="background-color: hotpink">AVAILABLE</span>
                                }
                                
                                else
                                {
                                        <span class="badge bg-danger text-white">NOT AVAILABLE</span>

                                }
                            </p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text customFont">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                                @item.ProductPrice.ToString("c")
                                
                            </p>
                        </div>
                    </div>
                </div>
            </div>
              </span>
        </div>
  
    }
</div>

        
