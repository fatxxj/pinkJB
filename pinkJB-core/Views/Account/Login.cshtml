@using pinkJB_core.Data.ViewModels;
@model LoginVM;

@{
    ViewData["Title"] = "Log in to your account";
}

<div class="row">
    <div class="container">
        <div class="row ">
            <br /><br /><br /><br />
            <div class="col-md-3"></div>
            <div class="col-md-6 offset-md-3 text-center">
                <h1 class="text-center text-dark mt-5 customFont" style="color: deeppink">Login Form</h1>
                <div class="card my-5">

                    @if(TempData["Error"]!=null)
                    {
                        <div class = "col-md-12 alert alert-danger">
                            <span><b>Sorry!</b> - @TempData["Error"]</span>
                            </div>
                    }

                    <form asp-action="Login" class="card-body cardbody-color p-lg-5">

                        <div class="text-center">
                            <img src="/lib/242515766_267146348723973_8030943319972783254_n.jpg" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                                 width="200px" alt="profile">
                        </div>
                        <div asp-validation-summary="ModelOnly"></div>

                            <br />
                            <div class="mb-3">
                                <input type="text" asp-for="EmailAddress" class="form-control" id="Username" aria-describedby="emailHelp"
                                       placeholder="User Name">
                                        <span asp-validation-for="EmailAddress"></span>
                            </div>
                            <div class="mb-3" style="margin-top: 5px;">
                                <input type="password" asp-for="Password" class="form-control" id="password" placeholder="Password">
                                <span asp-validation-for="Password"></span>
                               
                            </div>
                            <br />
                            <div class="text-center customFont">
                                
                                <button type="submit" id="" class="btn btn-outline-secondary LogIN ">Log in</button>
                                <a class="btn btn-outline-secondary customFont LogIN" asp-controller="Home" asp-action="Store">Cancel</a>
                                
                            </div>
                            <br />
                            <div id="emailHelp" class="form-text text-center mb-5 text-dark">
                                Not
                                Registered? <a href="#" class="text-dark fw-bold">
                                    Create an
                                    Account
                                </a>
                            </div>
                        
                    </form>
                </div>

            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>